                <Entry Grid.Row="2" Placeholder="SENHA" BackgroundColor="White" VerticalOptions="Center"/>
                <Button Grid.Row="3" Text="botão"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>