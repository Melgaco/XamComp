             x:Class="SampleProject.TemplateClasses.CustomElements.PageSchema.Page.LoginPage"
             BackgroundImage="bg_tree">
    <ContentPage.Content>
        <StackLayout>
            <Grid VerticalOptions="Center" HorizontalOptions="Center">
                <Image Grid.Row="0" Source="icon.png" />
